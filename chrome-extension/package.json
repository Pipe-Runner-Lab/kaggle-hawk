{
  "name": "kaggle-hawk-chrome-extension",
  "version": "1.0.0",
  "description": "A utility for Kaggle users to track useful contest attributes.",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "classnames": "^2.2.6",
    "firebase": "^8.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "react": "^17.0.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.1",
    "react-moment": "^1.1.1",
    "react-router-dom": "^5.2.0",
    "react-ticker": "^1.2.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/react-custom-scrollbars": "^4.0.7",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "crx": "^5.0.1",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^4.5.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webextension-polyfill": "^0.7.0",
    "webextension-polyfill-ts": "^0.22.0",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-extension-reloader": "^1.1.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "generate:crx": "npx crx pack ./dist -o kaggle-hawk.crx",
    "generate:zip": "npx crx pack ./dist --zip-output kaggle-hawk.zip",
    "dev:popup": "npx webpack --watch --mode=development --config webpack/popup.js",
    "dev:background": "npx webpack --watch --mode=development --config webpack/background.js",
    "dev": "npm run clean && npx concurrently -n \"popup,background\" -c \"green,blue\" --kill-others \"npm run dev:popup\" \"npm run dev:background\"",
    "build:crx": "npm run clean && npx webpack --mode=production --config webpack/popup.js && npx webpack --mode=production --config webpack/background.js && npm run generate:crx && npm run clean",
    "build:zip": "npm run clean && npx webpack --mode=production --config webpack/popup.js && npx webpack --mode=production --config webpack/background.js && npm run generate:zip && npm run clean"
  },
  "author": "Aakash S. Mallik",
  "license": "ISC"
}
